<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OG.PhoneVerifyPage"
             Title="Verify">
    <StackLayout Padding="30" Spacing="20" VerticalOptions="Center">
        <Label x:Name="phoneLabel" Text="Code sent to..." FontSize="18" HorizontalOptions="Center" />

        <Entry x:Name="codeEntry" Placeholder="Enter verification code" />

        <Button Text="Verify Code"
            Clicked="OnVerifyCodeClicked"
            BackgroundColor="#4CAF50"
            TextColor="White" />
    </StackLayout>
</ContentPage>