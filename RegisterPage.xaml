<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OG.RegisterPage"
             Title="Join Okada Go Now">
    <StackLayout Padding="10" Spacing="20" VerticalOptions="Center">
        <Label Text="Join Okada Go Now" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />

        <Entry x:Name="emailEntry" Placeholder="Email" Keyboard="Email" />
        <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True" />
        <Button Text="Join Now" Clicked="OnRegisterClicked" BackgroundColor="#4CAF50" TextColor="White" />
    </StackLayout>
</ContentPage>