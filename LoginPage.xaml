<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OG.LoginPage"
             Title="Welcome to Okada Go">
    <StackLayout Padding="30" Spacing="20" VerticalOptions="Center">
        <Label Text="Login to Continue" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />

        <Entry x:Name="emailEntry" Placeholder="Email" Keyboard="Email" />
        <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True" />

        <Button Text="Login" Clicked="OnLoginClicked" BackgroundColor="#2196F3" TextColor="White" />
    </StackLayout>


</ContentPage>