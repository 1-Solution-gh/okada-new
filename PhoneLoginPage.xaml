<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
x:Class="OG.PhoneLoginPage"
Title="Welcome to Okada Go">

    <StackLayout Padding="30" Spacing="20" VerticalOptions="Center">
        <Label Text="Enter your phone number" FontSize="20" HorizontalOptions="Center" />

        <Entry x:Name="phoneEntry" Placeholder="+233234567890" Keyboard="Telephone" />

        <Button x:Name="sendCodeButton"
            Text="Send Verification Code"
            Clicked="OnSendCodeClicked"
            BackgroundColor="#2196F3"
            TextColor="White" />
    </StackLayout>

</ContentPage>